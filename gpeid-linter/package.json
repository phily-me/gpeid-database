{
  "name": "gpeid-linter",
  "displayName": "gpEID Linter - lints gpEID identifiers",
  "description": "Linter for gpEID identifiers based on BNF grammar",
  "version": "0.0.1",
  "publisher": "gpe",
  "repository": {
    "type": "git",
    "url": "https://github.com/phily-me/gpeid-database"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Linters"],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:markdown",
    "onLanguage:gpeid"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "languages": [{
      "id": "gpeid",
      "aliases": ["gpEID", "gpeid"],
      "extensions": [".gpeid"],
      "configuration": "./language-configuration.json"
    }],
    "configuration": {
      "title": "gpEID Linter",
      "properties": {
        "gpeidLinter.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable gpEID linting"
        },
        "gpeidLinter.validateOnType": {
          "type": "boolean",
          "default": true,
          "description": "Validate gpEID strings as you type"
        }
      }
    }
  },
  "scripts": {
    "test": "node test/test-parser.js",
    "build": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}